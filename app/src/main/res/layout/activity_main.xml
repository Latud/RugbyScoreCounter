<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/rugby"
        android:scaleType="centerCrop"/>

    <View
        android:layout_width="@dimen/line1"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding4"
            android:text="@string/teamA"
            android:textSize="@dimen/textSize20"
            android:textColor="@color/color_black"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="@dimen/margin24"
            android:layout_marginLeft="@dimen/margin11"
            android:layout_marginRight="@dimen/margin11"
            android:background="@color/color_green"/>

        <TextView
            android:id="@+id/team_a_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding4"
            android:text="0"
            android:textSize="@dimen/textSize56"
            android:textColor="@color/color_orange"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="@dimen/margin16"
            android:textStyle="bold"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin8"
            android:onClick="fivePoints"
            android:text="@string/try5"
            android:layout_marginTop="@dimen/margin8"
            android:layout_marginLeft="@dimen/margin24"
            android:layout_marginRight="@dimen/margin24"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:onClick="threePoints"
            android:text="@string/penalty"
            android:layout_marginTop="@dimen/margin24"
            android:layout_marginLeft="@dimen/margin24"
            android:layout_marginRight="@dimen/margin24"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:onClick="threePointsDrop"
            android:text="@string/dropGoal"
            android:layout_marginTop="@dimen/margin24"
            android:layout_marginLeft="@dimen/margin24"
            android:layout_marginRight="@dimen/margin24"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin8"
            android:onClick="twoPoints"
            android:text="@string/conversion"
            android:layout_marginTop="@dimen/margin8"
            android:layout_marginLeft="@dimen/margin24"
            android:layout_marginRight="@dimen/margin24"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding4"
            android:text="@string/teamB"
            android:textSize="@dimen/textSize20"
            android:textColor="@color/color_black"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="@dimen/margin24"
            android:layout_marginLeft="@dimen/margin11"
            android:layout_marginRight="@dimen/margin11"
            android:background="@color/color_green"/>

        <TextView
            android:id="@+id/team_b_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding4"
            android:text="0"
            android:textSize="@dimen/textSize56"
            android:textColor="@color/color_orange"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="@dimen/margin16"
            android:textStyle="bold"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin8"
            android:onClick="fivePointsToTeamB"
            android:text="@string/try5"
            android:layout_marginTop="@dimen/margin8"
            android:layout_marginLeft="@dimen/margin24"
            android:layout_marginRight="@dimen/margin24"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin8"
            android:onClick="threePointsToTeamB"
            android:text="@string/penalty"
            android:layout_marginTop="@dimen/margin24"
            android:layout_marginLeft="@dimen/margin24"
            android:layout_marginRight="@dimen/margin24"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin8"
            android:onClick="threePointsToTeamBDrop"
            android:text="@string/dropGoal"
            android:layout_marginTop="@dimen/margin24"
            android:layout_marginLeft="@dimen/margin24"
            android:layout_marginRight="@dimen/margin24"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin8"
            android:onClick="twoPointsToTeamB"
            android:text="@string/conversion"
            android:layout_marginTop="@dimen/margin8"
            android:layout_marginLeft="@dimen/margin24"
            android:layout_marginRight="@dimen/margin24"/>

    </LinearLayout>

</LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/reset"
        android:onClick="Reset"
        android:background="@color/color_orange"
        android:layout_marginBottom="@dimen/margin24"/>

</RelativeLayout>
